<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    tools:context=".Game">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="378dp"
        android:layout_height="345dp"
        app:srcCompat="@drawable/tablero"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/txtUserView"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="#F1EAEA"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERDIDAS:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/txtWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GANADAS:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/txtLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#EFE7E7"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="342dp"
        tools:layout_editor_absoluteY="117dp" />

    <Button
        android:id="@+id/btnEmpezar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="empezar"
        android:text="Empezar partida"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="616dp" />

</androidx.constraintlayout.widget.ConstraintLayout>